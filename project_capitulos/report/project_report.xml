<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_report" model="ir.actions.report">
            <field name="name">Informe de Proyecto</field>
            <field name="model">project.project</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">project_capitulos.project_report_template</field>
            <field name="report_file">project_capitulos.project_report</field>
            <field name="binding_model_id" ref="model_project_project"/>
            <field name="binding_type">report</field>
        </record>

        <template t-name="project_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="proy">
                    <!--                    <t t-call="web.external_layout">-->
                    <div class="header">
                        <h2>Presupuesto y Mediciones</h2>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th>CÃ“DIGO</th>
                                    <th>RESUMEN</th>
                                    <th>UDS</th>
                                    <th>LONGITUD</th>
                                    <th>ANCHURA</th>
                                    <th>ALTURA</th>
                                    <th>CANTIDAD</th>
                                    <th>PRECIO</th>
                                    <th>IMPORTE</th>
                                </tr>
                            </thead>
                        </table>

                    </div>
                    <div class="page">
                        <table class="table table-sm o_main_table">
                            <tbody>
                                <t t-foreach="proy.capitulos_id" t-as="cap">
                                    <tr>
                                        <td>
                                            <span t-field="cap.numero_capitulo"/>
                                        </td>
                                        <td>
                                            <span t-field="cap.name"/>
                                        </td>
                                    </tr>

                                    <t t-foreach="cap.subcapitulo_ids" t-as="sub">
                                        <tr>
                                            <td>
                                                <span t-field="sub.numero_subcapitulo"/>
                                            </td>
                                            <td>
                                                <span t-field="sub.name"/>
                                            </td>
                                        </tr>

                                        <t t-foreach="sub.partidas_ids" t-as="par">
                                            <tr>
                                                <!--                                                    <td><span t-field="par.numero_partida"/></td>-->
                                                <td></td>
                                                <td>
                                                    <span t-field="par.name"/>
                                                </td>
                                            </tr>
                                            <t t-foreach="par.item_capitulo_ids" t-as="item">
                                                <tr>
                                                    <!--                                                    <td><span t-field="par.numero_partida"/></td>-->
                                                    <!--                                                    <td><span t-field="par.name"/></td>-->
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
                <!--                </t>-->
            </t>
        </template>


    </data>
</odoo>