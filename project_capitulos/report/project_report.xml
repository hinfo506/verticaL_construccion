<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_report" model="ir.actions.report">
            <field name="name">Informe de Proyecto</field>
            <field name="model">project.project</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">project_capitulos.project_report_template</field>
            <field name="report_file">project_capitulos.project_report</field>
            <field name="binding_model_id" ref="model_project_project"/>
            <field name="binding_type">report</field>
        </record>

        <template t-name="project_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Informe del Proyecto</h2>
                            <p>Nombre: <span t-field="o.name"/></p>
                            <p>Capitulos: <span t-field="o.capitulos_kanban_count"/></p>
                            <p>Subcapitulos: <span t-field="o.subcapitulos_kanban_count"/></p>
                            <p>Partidas: <span t-field="o.partidas_kanban_count"/></p>
                            <p>Items: <span t-field="o.item_kanban_count"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        

    </data>
</odoo>