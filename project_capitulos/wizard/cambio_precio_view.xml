<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cambio_precio_view_form" model="ir.ui.view">
            <field name="name">cambio_precio_view_form</field>
            <field name="model">cambio.precio</field>
            <field name="arch" type="xml">
                <form string="cambio_precio_form">
                    <sheet>
                        <field name="info" readonly="1"/>
                        <div name="is_guardado" class="alert alert-success text-center o_form_header"
                             attrs="{'invisible': [('is_guardado','=',False)]}" role="alert">
                            <a class="close" data-dismiss="alert" href="#">x</a>
                            <div>
                                <strong>Se a cambiado el precio de coste satisfactoriamente</strong>
                            </div>
                        </div>
                        <!--                        <div name="is_vacio" class="alert alert-info text-center o_form_header" attrs="{'invisible': [('is_vacio','=',True)]}" role="alert">-->
                        <!--                            <a class="close" data-dismiss="alert" href="#">x</a>-->
                        <!--                            <div>-->
                        <!--                                <strong>No existe ningun artículo en la fase actual</strong>-->
                        <!--                            </div>-->
                        <!--                        </div>-->

                        <group>
                            <field name="is_guardado" invisible="1"/>
                            <field name="mostrar_botones" invisible="1"/>
                            <field name="is_vacio" invisible="1"/>
                            <!--                            <field name="faseprincipal_id"/>-->
                            <group>
                                <field name="product_id"/>
                            </group>
                            <group>
                                <field name="tipo_cambio"/>
                            </group>
                            <group attrs="{'invisible': [('tipo_cambio','=',False)]}">
                                <field name="nuevo_precio" string="Nuevo Precio Coste"
                                       attrs="{'invisible': [('tipo_cambio','=','impuesto')]}"/>
                                <field name="tipo_descuento" string="Tipo Dto."
                                       attrs="{'invisible': [('tipo_cambio','=','nuevocoste')]}"/>
                                <field name="cant_descuento" string="Importe Dto."
                                       attrs="{'invisible': [('tipo_cambio','=','nuevocoste'),]}"/>
                                <field name="impuesto_porciento" string="Marge Beneficio %"
                                       attrs="{'invisible': [('tipo_cambio','=','nuevocoste')]}"/>
                            </group>
                            <group>

                            </group>
                        </group>

                        <notebook>
                            <page name="list_arti" string="Listado de Artículo">
                                <field name="item_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" string="Producto"/>
                                        <field name="cost_price" string="Precio Coste"/>
                                        <field name="subtotal_item_capitulo" string="Importe"/>
                                        <field name="tipo_descuento" string="Tipo Dto."/>
                                        <field name="total_impuesto_item" string="Imp. Impuesto"/>
                                        <field name="suma_impuesto_item_y_cost_price" string="Total"/>
                                        <!--                                        <field name="total_item_capitulo"/>-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Guardar y nuevo" name="action_guardar_nuevo" type="object" class="oe_highlight"
                                attrs="{'invisible': [('mostrar_botones','!=',False)]}"/>
                        <button string="Guardar" name="action_guardar" type="object" class="oe_highlight"
                                attrs="{'invisible': [('mostrar_botones','!=',False)]}"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>