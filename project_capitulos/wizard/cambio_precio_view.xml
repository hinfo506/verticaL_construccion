<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="cambio_precio_view_form" model="ir.ui.view">
            <field name="name">cambio_precio_view_form</field>
            <field name="model">cambio.precio</field>
            <field name="arch" type="xml">
                <form string="cambio_precio_form">
                    <sheet>
                        <div class="success success-info text-center o_form_header" attrs="{'invisible': [('is_guardado','=',False)]}" role="success">
                            <a class="close" data-dismiss="success" href="#">x</a>
                            <div>
                                <strong>Se a cambiado el precio de coste satisfactoriamente</strong>
                            </div>
                        </div>
                        <group>
                            <field name="is_guardado" invisible="1"/>
                            <group><field name="product_id"/></group>
                            <group><field name="nuevo_precio"/></group>
                        </group>

                        <notebook>
                            <page name="list_arti" string="Listado de ArtÃ­culo">
                                <field name="item_ids">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="project_id"/>
                                        <field name="capitulo_id"/>
                                        <field name="subcapitulo_id"/>
                                        <field name="partidas_id"/>
                                        <field name="product_qty"/>
                                        <field name="cost_price"/>
                                        <field name="subtotal_item_capitulo"/>
                                        <field name="total_impuesto_item"/>
                                        <field name="suma_impuesto_item_y_cost_price"/>
                                        <field name="total_item_capitulo"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Guardar y nuevo" name="action_guardar_nuevo" type="object" class="oe_highlight"/>
                        <button string="Guardar" name="action_guardar" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>