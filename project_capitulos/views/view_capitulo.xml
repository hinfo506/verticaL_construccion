<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="capitulos_view_form" model="ir.ui.view">
            <field name="name">capitulos_view_form</field>
            <field name="model">capitulo.capitulo</field>
            <field name="arch" type="xml">
                <form string="Capítulos">
                    <sheet>
<!--                        <field name="subcapitulos_count"/>-->
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="met_activi_capitulos" type="object" icon="fa-archive">
                                <field name="activi_count" string="Actividades" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="met_subcapitulos"  type="object" icon="fa-archive">
                                <field name="sub_count" string="Subcapitulos"  widget="statinfo"/>
                            </button>
                        </div>

                        <group>
                        <group>
                          <group>
                            <field name="name"/>
                          </group>
                          <group>
                             <field name="total"/>
                          </group>
                        </group>
                        
                        <notebook>
                            <page string="Datos del Capítulo">
                              <field name="descripcion"/>
                                <group>
                                    <group>
                                        <field name="numero_capitulo"/>
                                        <field name="name"/>
                                        <field name="total"/>
                                    </group>
                                     <group>
                                        <field name="fecha_finalizacion"/>
                                        <field name="project_id" attrs="{'readonly': [('id', '!=', False)]}"/>
    <!--                            <field name="descripcion"/>-->
                                     </group>
                                 </group>
                            </page>

                            <page string="Subcapítulos">
                                <field name="subcapitulo_ids">
<!--                                    <tree editable="bottom">-->
                                    <tree >
                                        <field name="name"/>
                                        <field name="descripcion"/>
                                        <field name="total"/>
                                        <field name="fecha_finalizacion"/>
    <!--                                    <field name="capitulo_id"/>-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="capitulos_view_tree" model="ir.ui.view">
            <field name="name">capitulos_view_tree</field>
            <field name="model">capitulo.capitulo</field>
            <field name="arch" type="xml">
                <tree string="Capitulos">
                    <field name="name"/>
                    <field name="cantidad"/>
                    <field name="total"/>
                    <field name="fecha_finalizacion"/>
                    <field name="project_id"/>
                    <field name="descripcion"/>
                    <button type="object" string=" Subcapítulos" name="met_subcapitulos" class="btn btn-primary" icon="fa-hand-o-right"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
