<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="capitulos_view_form" model="ir.ui.view">
            <field name="name">capitulos_view_form</field>
            <field name="model">capitulo.capitulo</field>
            <field name="arch" type="xml">
                <form string="Capítulos">
                    <sheet>
<!--                        <field name="subcapitulos_count"/>-->
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="met_activi_capitulos" type="object" icon="fa-archive">
                                <field name="activi_count" string="Actividades" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="met_subcapitulos"  type="object" icon="fa-archive">
                                <field name="sub_count" string="Subcapitulos"  widget="statinfo"/>
                            </button>
                        </div>

                        <group>
                          <group>
                            <field name="name"/>
                          </group>
                          <group>
                             <field name="total"/>
                          </group>
                        </group>
                        
                        <notebook>
                            <page string="Datos del Capítulo">
                                <group>
                                    <group>
                                        <field name="numero_capitulo"/>
                                        <field name="total" attrs="{'readonly': [('id', '!=', False)]}"/>
                                    </group>
                                     <group>
                                        <label for="fecha_inicio" string="Fecha"/>
                                        <div name="dates" class="o_row">
                                            <field name="fecha_inicio" widget="daterange" options="{&quot;related_end_date&quot;: &quot;fecha_finalizacion&quot;}"/>
                                            <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                            <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('fecha_inicio', '=', False), ('fecha_finalizacion', '=', False)]}"/>
                                            <field name="fecha_finalizacion" widget="daterange" options="{&quot;related_start_date&quot;: &quot;fecha_inicio&quot;}"/>
                                        </div>
                                        <field name="project_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                                        <field name="name"/>
                                    <!--<field name="descripcion"/>-->
                                     </group>
                                 </group>
                                 <group>
                                    <field name="descripcion" string="Descripción"/>
                                 </group>
                            </page>

                            <page string="Subcapítulos">
                                <field name="subcapitulo_ids">
<!--                                    <tree editable="bottom">-->
                                    <tree >
                                        <field name="name"/>
                                        <field name="descripcion"/>
                                        <field name="total"/>
                                        <field name="fecha_finalizacion"/>
    <!--                                    <field name="capitulo_id"/>-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
<!--                        <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>-->
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="capitulos_view_tree" model="ir.ui.view">
            <field name="name">capitulos_view_tree</field>
            <field name="model">capitulo.capitulo</field>
            <field name="arch" type="xml">
                <tree string="Capitulos" class = "project_capitulos_Capitulos" default_order="numero_capitulo">
                    <field name="numero_capitulo" string="Nº"/>
                    <field name="fecha_finalizacion" string="Finaliza"/>
                    <field name="cantidad" string="Cantidad" invisible ="1"/>
                    <field name="name"/>
                    <field name="total"/>
                    <field name="project_id"/>
                    <!-- <field name="descripcion" /> -->
                    <button type="object" string=" Subcapítulos" name="met_subcapitulos" class="btn btn-primary" icon="fa-hand-o-right"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
