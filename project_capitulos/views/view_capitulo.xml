<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="capitulos_view_form" model="ir.ui.view">
            <field name="name">capitulos_view_form</field>
            <field name="model">capitulo.capitulo</field>
            <field name="arch" type="xml">
                <form string="Capitulos">
                    <sheet>
<!--                        <field name="subcapitulos_count"/>-->
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="met_subcapitulos" string="Subcapitulos" type="object" icon="fa-archive">
                                <field name="sub_count"  widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="numero_capitulo"/>
                            <field name="name"/>
                            <field name="cantidad"/>
                            <field name="total"/>
                            <field name="fecha_finalizacion"/>
                            <field name="project_id"/>
<!--                            <field name="descripcion"/>-->
                        </group>
                        <notebook>
                            <page string="SubCapitulos">

                                <field name="subcapitulo_ids">
<!--                                    <tree editable="bottom">-->
                                    <tree >
                                        <field name="name"/>
                                        <field name="descripcion"/>
                                        <field name="total"/>
                                        <field name="fecha_finalizacion"/>
    <!--                                    <field name="capitulo_id"/>-->
                                    </tree>
                                </field>
                            </page>
                            <page string="Descripcion Capitulo">
                                <field name="descripcion"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="capitulos_view_tree" model="ir.ui.view">
            <field name="name">capitulos_view_tree</field>
            <field name="model">capitulo.capitulo</field>
            <field name="arch" type="xml">
                <tree string="Capitulos">
                    <field name="name"/>
                    <field name="cantidad"/>
                    <field name="total"/>
                    <field name="fecha_finalizacion"/>
                    <field name="project_id"/>
                    <field name="descripcion"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
