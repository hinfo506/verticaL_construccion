<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="capitulos_view_form" model="ir.ui.view">
            <field name="name">capitulos_view_form</field>
            <field name="model">capitulo.capitulo</field>
            <field name="arch" type="xml">
                <form string="capitulos_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="cantidad"/>
                            <field name="total"/>
                            <field name="fecha_finalizacion"/>
                            <field name="project_id"/>
                            <field name="descripcion"/>
                            <field name="item_subcapitulo_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="descripcion"/>
                                    <field name="total"/>
                                    <field name="fecha_finalizacion"/>
<!--                                    <field name="capitulo_id"/>-->
                                </tree>
                            </field>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="capitulos_view_tree" model="ir.ui.view">
            <field name="name">capitulos_view_tree</field>
            <field name="model">capitulo.capitulo</field>
            <field name="arch" type="xml">
                <tree string="capitulos_tree">
                    <field name="name"/>
                    <field name="cantidad"/>
                    <field name="total"/>
                    <field name="fecha_finalizacion"/>
                    <field name="project_id"/>
                    <field name="descripcion"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>