<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="itemsubcapitulo_view_form" model="ir.ui.view">
            <field name="name">itemsubcapitulo_view_form</field>
            <field name="model">item.capitulo</field>
            <field name="arch" type="xml">
                <form string="itemsubcapitulo_form">
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="job_type"/>
<!--                            <field name="product_id" attrs="{'invisible': [('active', '=', True)]}" domain="[('detailed_type', '=', 'consu')]"/>-->
                            <field name="product_id" domain="[('detailed_type', '=', 'consu')]" attrs="{'invisible': [('job_type', '!=', 'material')]}"/>
<!--                            <field name="product_id" domain="[('detailed_type', '=', 'service')]" attrs="{'invisible': [('job_type', '!=', 'labour')]}"/>-->
<!--                            <field name="product_id" domain="[('detailed_type', '=', 'product')]" attrs="{'invisible': [('job_type', '!=', 'overhead')]}"/>-->
                            <field name="reference"/>
                            <field name="hours" attrs="{'invisible': [('job_type', '!=', 'labour')]}"/>
                            <field name="descripcion"/>
                            <field name="product_qty"/>
                            <field name="uom_id"/>
                            <field name="cost_price"/>
                            <field name="total_cost"/>


                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    
    </data>
</odoo>