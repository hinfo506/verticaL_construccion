<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="itemsubcapitulo_view_form" model="ir.ui.view">
            <field name="name">itemsubcapitulo_view_form</field>
            <field name="model">item.capitulo</field>
            <field name="arch" type="xml">
                <form string="Items">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="met_itemvolumetria"  type="object" icon="fa-archive">
                                <field name="itemvolumetria_count" string="Item VolumetrÃ­a"  widget="statinfo"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="date"/>
                                <field name="job_type"/>
                                <field name="product_id"/>
                                <field name="descripcion"/>
                                <field name="product_qty"/>
                                <field name="reference" />
                                <field name="uom_id"/>
                            </group>
                            <group>
                                <field name="longitud" />
                                <field name="ancho" />
                                <field name="alto" />
                                <field name="cost_price"/>
                                <field name="actual_quantity"/>
                                <field name="total_cost"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="itemsubcapitulo_view_tree" model="ir.ui.view">
            <field name="name">item.capitulo.tree</field>
            <field name="model">item.capitulo</field>
            <field name="arch" type="xml">
                <tree string="Items">
                    <field name="date"/>
                    <field name="job_type"/>
                    <field name="product_id"/>
                    <field name="descripcion"/>
                    <field name="product_qty"/>
                    <field name="reference" />
                    <field name="longitud" />
                    <field name="ancho" />
                    <field name="alto" />
                    <field name="cost_price"/>
                    <field name="actual_quantity"/>
                    <field name="total_cost"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>
    
    </data>
</odoo>