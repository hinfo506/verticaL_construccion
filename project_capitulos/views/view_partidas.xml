<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="partidas_view_form" model="ir.ui.view">
            <field name="name">partidas_view_form</field>
            <field name="model">partidas.partidas</field>
            <field name="arch" type="xml">
                <form string="partidas_form">
                    <header>
                        <button name='wizard_cambio_precio' string='Cambiar Precio Masivo'
                            class='oe_highlight'
                            type='object'
                        />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="met_activi_partidas" type="object" icon="fa-archive">
                                <field name="activi_count_parti"   string="Actividades" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="action_view_item" type="object" icon="fa-archive">
                                <field name="item_count"   string="Item" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="action_view_volumetria" type="object" icon="fa-archive">
                                <field name="volumetria_count"   string="Volumetria" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="total"/>
                        </group>
                        </group>
                        <notebook>

                            <page string="Datos de la Partida">

                              <group>
                                <group>
<!--                                  <field name="numero" readonly="1"/>-->
                                  <field name="numero_partida"/>

                                  <field name="cantidad" string="Cantidad"/>
                                  <field name="total"/>
                                 </group>
                                 <group>
                                  <label for="fecha_inicio" string="Fecha"/>
                                    <div name="dates" class="o_row">
                                        <field name="fecha_inicio" widget="daterange" options="{&quot;related_end_date&quot;: &quot;fecha_finalizacion&quot;}"/>
                                        <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                        <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('fecha_inicio', '=', False), ('fecha_finalizacion', '=', False)]}"/>
                                        <field name="fecha_finalizacion" widget="daterange" options="{&quot;related_start_date&quot;: &quot;fecha_inicio&quot;}"/>
                                    </div>
                                  <field name="project_id"/>
                                  <field name="fase_principal_id"/>
                                  <field name="capitulo_id"/>
                                  <field name="subcapitulo_id"/>
                                  <field name="name" attrs="{'readonly': [('id', '!=', False)]}"/>
                                  </group>
                              </group>
                              <group>
                                  <field name="descripcion" string="Descripción"/>
                             </group>

                            </page>

                        </notebook>

                        <group class="oe_subtotal_footer oe_right" colspan="2" name="jobcost_total">
                            <field name="material_total" widget="monetary"/>
                            <field name="labor_total" widget="monetary"/>
                            <field name="machinerycost_total" widget="monetary"/>
                            <field name="overhead_total" widget="monetary"/>
                            <field name="jobcost_total" widget="monetary"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="partidas_view_tree" model="ir.ui.view">
            <field name="name">partidas_view_tree</field>
            <field name="model">partidas.partidas</field>
            <field name="arch" type="xml">
                <tree string="partidas_tree" default_order="fecha_finalizacion asc">
                    <field name="numero_partida" string="Nº Partida"/>
                    <field name="fecha_finalizacion" string="Finaliza"/>
                    <field name="name" string="Descripción Partida"/>
                    <button type="object" string=" Volumetría" name="action_view_volumetria" class="btn btn-primary" icon="fa-hand-o-right"/>
                    <field name="cantidad" string="Cantidad" />
                    <field name="total" string="Total"/>
                    <button type="object" string=" Item" name="action_view_item" class="btn btn-primary" icon="fa-hand-o-right"/>
                    <field name="project_id" string="Proyecto"/>
                    <field name="fase_principal_id" string="Fase Principal"/>
                    <field name="capitulo_id" string="Capitulo"/>
                    <field name="subcapitulo_id" string="Subcapítulo"/>
                </tree>
            </field>
        </record>

        <record id="busqueda_subcapitulo" model="ir.ui.view">
            <field name="name">Busqueda capitulo</field>
            <field name="model">partidas.partidas</field>
             <field name="arch" type="xml"> 
                <search>
                     <field name="name" string="en campo Partida"/>
                     <field name="subcapitulo_id" string="en campo Subcapítulo"/>
                </search>
            </field>
        </record> 

    </data>
</odoo>