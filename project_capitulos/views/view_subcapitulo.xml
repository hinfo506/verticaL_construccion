<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="subcapitulo_view_form" model="ir.ui.view">
            <field name="name">subcapitulo_view_form</field>
            <field name="model">sub.capitulo</field>
            <field name="arch" type="xml">
                <form string="Sub Capitulos">
                    <header>
                        <button name='wizard_cambio_precio' string='Cambiar Precio Masivo'
                            class='oe_highlight'
                            type='object'
                        />
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="met_activi_subcapitulo" type="object" icon="fa-archive">
                                <field name="activ_count"   string="Actividades" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="action_view_partidas" type="object" icon="fa-archive">
                                <field name="partidas_count"   string="Partidas" widget="statinfo"/>
                            </button>
                        </div>
                            <group>
                                <group>
                                  <field name="project_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                                  <field name="fase_principal_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                                  <field name="capitulo_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                                  <field name="name"/>
                                </group>
                                <group>
                                    <field name="numero_subcapitulo"/>
                                    <field name="cantidad" string="Cantidad"/>
                                    <label for="fecha_inicio" string="Fecha"/>
                                        <div name="dates" class="o_row">
                                            <field name="fecha_inicio" widget="daterange" options="{&quot;related_end_date&quot;: &quot;fecha_finalizacion&quot;}"/>
                                            <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                            <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('fecha_inicio', '=', False), ('fecha_finalizacion', '=', False)]}"/>
                                            <field name="fecha_finalizacion" widget="daterange" options="{&quot;related_start_date&quot;: &quot;fecha_inicio&quot;}"/>
                                        </div>
                                    <field name="total"/>
                                    <field name="total_prevision" attrs="{'readonly': [('id', '!=', False)]}"/>
                                </group>
                            </group>
                        
                        <notebook>
                            <page string="Partidas del Subcapítulo">
                                <field name="partidas_ids" attrs="{'readonly': [('id', '!=', False)]}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="descripcion"/>
                                        <field name="total"/>
                                        <field name="fecha_finalizacion"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="descripcion" string="Descripción"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="jobcost_total">
<!--                            <field name="material_total" widget="monetary"/>-->
                            <field name="labor_total" widget="monetary"/>
                            <field name="machinerycost_total" widget="monetary"/>
                            <field name="overhead_total" widget="monetary"/>
                            <field name="jobcost_total" widget="monetary"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="subcapitulo_view_tree" model="ir.ui.view">
            <field name="name">subcapitulo_view_tree</field>
            <field name="model">sub.capitulo</field>
            <field name="arch" type="xml">
                <tree string="Sub Capitulos" default_order="fecha_finalizacion asc">
                    <field name="numero_subcapitulo" string="Nº Subcapítulo"/>
                    <field name="fecha_finalizacion" string="Finaliza"/>
                    <field name="cantidad" string="Cantidad" invisible ="1" />
                    <field name="name" string="Descripción Subcapítulo"/>
                    <field name="descripcion" invisible = "1"/>
                    <field name="total" string="Total"/>
                     <button type="object" string=" Partida" name="action_view_partidas" class="btn btn-primary" icon="fa-hand-o-right"/>
                    <field name="project_id" string="Proyecto"/>
                    <field name="fase_principal_id" string="Fase Principal"/>
                    <field name="capitulo_id" string="Capítulo"/>
                </tree>
            </field>
        </record>

        <record id="busqueda_capitulo" model="ir.ui.view">
            <field name="name">Busqueda capitulo</field>
            <field name="model">sub.capitulo</field>
             <field name="arch" type="xml"> 
                <search>
                     <field name="name" string="en campo Subcapítulo"/>
                     <field name="capitulo_id" string="en campo Capitulo"/>
                </search>
            </field>
        </record> 
    </data>
</odoo>