<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="subcapitulo_view_form" model="ir.ui.view">
            <field name="name">subcapitulo_view_form</field>
            <field name="model">sub.capitulo</field>
            <field name="arch" type="xml">
                <form string="subcapitulo_form">
                    <sheet>
                        <group>
                            <field name="number"/>
                            <field name="name"/>
                            <field name="total"/>
                            <field name="fecha_finalizacion"/>
                            <field name="capitulo_id"/>
                            <field name="descripcion"/>
                        </group>
                        <notebook>
<!--                            <page string="Descripcion Capitulo">-->
<!--                                <field name="descripcion"/>-->
<!--                            </page>-->
                            <page string="Materiales">
                                <field name="item_capitulo_materiales_ids" context="{'default_job_type':'material'}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="descripcion"/>
                                        <field name="total"/>
                                        <field name="fecha_finalizacion"/>
    <!--                                    <field name="capitulo_id"/>-->
                                    </tree>
                                </field>
                            </page>
                            <page string="Mano de Obra">
                                <field name="item_mano_obra_ids" context="{'default_job_type':'labour'}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="descripcion"/>
                                        <field name="total"/>
                                        <field name="fecha_finalizacion"/>
    <!--                                    <field name="capitulo_id"/>-->
                                    </tree>
                                </field>
                            </page>
                            <page string="Gastos Generales">
                                <field name="item_capitulo_fastos_generales" context="{'default_job_type':'overhead'}">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="descripcion"/>
                                        <field name="total"/>
                                        <field name="fecha_finalizacion"/>
    <!--                                    <field name="capitulo_id"/>-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="jobcost_total">
                            <field name="material_total" widget="monetary"/>
                            <field name="labor_total" widget="monetary"/>
                            <field name="overhead_total" widget="monetary"/>
                            <field name="jobcost_total" widget="monetary"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="subcapitulo_view_tree" model="ir.ui.view">
            <field name="name">subcapitulo_view_tree</field>
            <field name="model">sub.capitulo</field>
            <field name="arch" type="xml">
                <tree string="subcapitulo_tree">
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="total"/>
                    <field name="fecha_finalizacion"/>
<!--                    <field name="capitulo_id"/>-->
                </tree>
            </field>
        </record>
        
    </data>
</odoo>