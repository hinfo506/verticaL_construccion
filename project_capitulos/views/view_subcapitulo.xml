<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="subcapitulo_view_form" model="ir.ui.view">
            <field name="name">subcapitulo_view_form</field>
            <field name="model">sub.capitulo</field>
            <field name="arch" type="xml">
                <form string="Sub Capitulos">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="met_activi_subcapitulo" type="object" icon="fa-archive">
                                <field name="activ_count"   string="Actividades" widget="statinfo"/>
                            </button>
                        </div>
                            <group>
                                <group>
                                    <field name="name"/>
                                </group>
                                <group>
                                    <field name="total"/>
                                </group>
                            </group>
                        
                        <notebook>
                            <page string="Materiales">
                                <field name="item_capitulo_materiales_ids" nolabel="1" context="{'default_job_type':'material'}">
                                    <tree>
                                        <field name="date"/>
                                        <field name="product_id"/>
                                        <field name="descripcion"/>
                                        <field name="product_qty"/>
                                        <field name="reference" invisible="1"/>
                                        <field name="longitud"/>
                                        <field name="ancho"/>
                                        <field name="alto"/>
                                        <field name="cost_price"/>
                                        <!--<field name="actual_quantity"/> -->
                                        <field name="total_cost"/>
                                        <!-- <field name="cantidad_cost"/> -->
                                        <field name="uom_id"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="date"/>
                                            <field name="product_id" domain="[('detailed_type', '=', 'consu')]"/>
                                            <field name="descripcion"/>
                                            <field name="product_qty"/>
                                            <field name="reference" invisible="1"/>
                                            <field name="longitud"/>
                                            <field name="ancho"/>
                                            <field name="alto"/>
                                            <!-- <field name="cantidad_cost"/> -->
                                            <field name="cost_price"/>
                                            <!-- <field name="actual_quantity"/> -->
                                            <field name="total_cost"/>
                                            <field name="uom_id"/>
                                            <field name="job_type" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Mano de Obra">
                                <field name="item_mano_obra_ids" context="{'default_job_type':'labour'}">
                                    <tree>
                                        <field name="date"/>
                                        <field name="product_id"/>
                                        <field name="product_qty"/>
                                        <field name="cost_price"/>
                                        <field name="total_cost"/>
                                        <field name="uom_id"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="date"/>
                                            <field name="product_id" domain="[('detailed_type', '=', 'service')]"/>
                                            <field name="product_qty"/>
                                            <field name="cost_price"/>
                                            <field name="total_cost"/>
                                            <field name="uom_id"/>
                                            <field name="job_type" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            
                            <page string="Maquinaria">
                                <field name="item_capitulo_maquinaria" context="{'default_job_type':'machinery'}">
                                    <tree>
                                        <field name="date"/>
                                        <field name="product_id"/>
                                        <field name="cost_price" string="Porcentage"/>
                                        <field name="total_cost"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="date"/>
                                            <field name="product_id" domain="[('detailed_type', '=', 'consu')]"/>
                                            <field name="cost_price"/>
                                            <field name="total_cost"/>
                                            <field name="job_type" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <page string="Gastos Generales">
                                <field name="item_capitulo_gastos_generales" context="{'default_job_type':'overhead'}">
                                    <tree>
                                        <field name="date"/>
                                        <field name="product_id"/>
                                        <field name="descripcion"/>
                                        <field name="reference"/>
                                        <field name="product_qty"/>
                                        <field name="uom_id"/>
                                        <field name="cost_price"/>
                                        <field name="actual_quantity"/>
                                        <field name="total_cost"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="date"/>
                                            <field name="product_id" domain="[('detailed_type', '=', 'product')]"/>
                                            <field name="descripcion"/>
                                            <field name="reference"/>
                                            <field name="product_qty"/>
                                            <field name="uom_id"/>
                                            <field name="cost_price"/>
                                            <field name="actual_quantity"/>
                                            <field name="total_cost"/>
                                            <field name="job_type" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Datos del Subcapítulo">
                             
                              <group>
                                <group>
<!--                                  <field name="numero" readonly="1"/>-->
                                  <field name="numero"/>

                                  <field name="cantidad" string="Cantidad"/>
                                  <field name="total"/>
                                 </group>
                                 <group> 
                                  <label for="fecha_inicio" string="Fecha"/>
                                    <div name="dates" class="o_row">
                                        <field name="fecha_inicio" widget="daterange" options="{&quot;related_end_date&quot;: &quot;fecha_finalizacion&quot;}"/>
                                        <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                        <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('fecha_inicio', '=', False), ('fecha_finalizacion', '=', False)]}"/>
                                        <field name="fecha_finalizacion" widget="daterange" options="{&quot;related_start_date&quot;: &quot;fecha_inicio&quot;}"/>
                                    </div>
                                  <field name="capitulo_id"/>
                                  <field name="name"/>
                                  </group>
                              </group>
                              <group>
                                  <field name="descripcion" string="Descripción"/>
                             </group>
                             
                            </page>

                        </notebook>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="jobcost_total">
                            <field name="material_total" widget="monetary"/>
                            <field name="labor_total" widget="monetary"/>
                            <field name="machinerycost_total" widget="monetary"/>
                            <field name="overhead_total" widget="monetary"/>
                            <field name="jobcost_total" widget="monetary"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="subcapitulo_view_tree" model="ir.ui.view">
            <field name="name">subcapitulo_view_tree</field>
            <field name="model">sub.capitulo</field>
            <field name="arch" type="xml">
                <tree string="Sub Capitulos">
                    <field name="fecha_finalizacion" string="Finaliza"/>
                    <field name="cantidad" string="Cantidad"/>
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="total" string="Total"/>
                    
                </tree>
            </field>
        </record>
        
    </data>
</odoo>