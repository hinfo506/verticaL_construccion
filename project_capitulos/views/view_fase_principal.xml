<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="fase_principal_view_form" model="ir.ui.view">
            <field name="name">fase_principal_view_form</field>
            <field name="model">fase.principal</field>
            <field name="arch" type="xml">
                <form string="fase_principal_form">
                    <header>
                        <button name='wizard_cambio_precio' string='Cambiar Precio Masivo'
                                attrs="{'invisible': [('estado', '=', 'borrador')]}"
                                class='oe_highlight'
                                type='object'
                        />
                    </header>
                    <sheet>
                        <field name="estado" readonly="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="met_activi_capitulos" type="object" icon="fa-archive">
                                <field name="activi_count" string="Actividades" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="met_capitulos" type="object" icon="fa-archive">
                                <field name="cap_count" string="Capitulos" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="project_id" attrs="{'readonly': [('id', '!=', False)]}"/>
                                <field name="name"/>
                                <field name="etapa_id"/>
                            </group>
                            <group>
                                <field name="numero_fase_principal" string="Numero:"/>
                                <label for="fecha_inicio" string="Fecha"/>
                                <div name="dates" class="o_row">
                                    <field name="fecha_inicio" widget="daterange"
                                           options="{&quot;related_end_date&quot;: &quot;fecha_finalizacion&quot;}"/>
                                    <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon"
                                       title="Arrow"/>
                                    <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon"
                                       title="Arrow"
                                       attrs="{'invisible': [('fecha_inicio', '=', False), ('fecha_finalizacion', '=', False)]}"/>
                                    <field name="fecha_finalizacion" widget="daterange"
                                           options="{&quot;related_start_date&quot;: &quot;fecha_inicio&quot;}"/>
                                </div>
                                <field name="total"/>
                                <field name="total_prevision" attrs="{'readonly': [('id', '!=', False)]}"/>
                                <field name="location"/>
                            </group>
                        </group>
                        <group>
                            <field name="descripcion" string="Descripción"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="fase_principal_view_tree" model="ir.ui.view">
            <field name="name">fase_principal_view_tree</field>
            <field name="model">fase.principal</field>
            <field name="arch" type="xml">
                <tree string="fase_principal_tree" decoration-danger="estado == 'pendiente'"
                      decoration-info="estado == 'aprobada'">
                    <field name="numero_fase_principal"/>
                    <field name="name"/>
                    <button type="object" string=" Capítulos" name="met_capitulos" class="btn btn-primary"
                            icon="fa-hand-o-right"/>
                    <field name="project_id"/>
                    <field name="estado" string="Estado"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>