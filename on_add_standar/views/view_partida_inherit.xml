<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="partida_inherit_view" model="ir.ui.view">
            <field name="name">Partida</field>
            <field name="model">partidas.partidas</field>
            <field name="inherit_id" ref="project_capitulos.partidas_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group" position="before">
                    <group>
                        <group attrs="{'invisible': [('add_standar', '=', False)]}">
                            <field name="standard_id" attrs="{'required': [('add_standar', '=', True)]}"/>
                        </group>
                        <group attrs="{'invisible': [('estado_partida', '!=', 'borrador')]}">
                            <field name="add_standar" widget="boolean_toggle"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page name="items" string="Items del Standard" attrs="{'invisible': [('add_standar', '=', False)]}">
<!--                        <group>-->
<!--                            <field name="item_capitulo_ids" readonly="1"/>-->
                            <field name="line_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="product_id"/>
<!--                                        <field name="qty"/>-->
<!--                                        <field name="qty_done"/>-->
<!--                                        <field name="uom_id"/>-->
                                </tree>
                            </field>
<!--                        </group>-->
                    </page>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button name="validar_partida" type="object" string="Validar la partida" attrs="{'invisible': [('estado_partida', '!=', 'pendiente')]}"/>

                </xpath>

            </field>
        </record>

    </data>
</odoo>