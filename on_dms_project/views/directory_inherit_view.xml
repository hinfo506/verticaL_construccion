<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="directory_view_inherit" model="ir.ui.view">
            <field name="name">Directorio</field>
            <field name="model">dms.directory</field>
            <field name="inherit_id" ref="dms.view_dms_directory_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='count_elements']" position="after">
                    <field name="project_id"/>
                    <field name="capitulo_id"/>
                    <field name="sub_capitulo_id"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>