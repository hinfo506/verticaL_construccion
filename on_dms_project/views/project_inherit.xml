<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_dms_view_inherit" model="ir.ui.view">
            <field name="name">Proyectos</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet//div//button" position="before">
                    <button class="oe_stat_button" name="met_directorios" type="object" icon="fa-archive" string="Directorios">
                        <field name="capitulos_count" string="Capitulos" widget="statinfo"/>
                    </button>
                </xpath>

            </field>
        </record>
    </data>
</odoo>