<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_partida" model="ir.ui.view">
            <field name="name">Partida</field>
            <field name="model">partidas.partidas</field>
            <field name="inherit_id" ref="project_capitulos.partidas_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet//div//button" position="before">
                    <!--                    <div class="oe_button_box" name="button_box">-->
                    <button class="oe_stat_button" name="met_directorios" type="object" icon="fa-archive">
                        <field name="directory_count" string="Directorios" widget="statinfo"/>
                    </button>
                    <!--                    </div>-->
                </xpath>

            </field>
        </record>


    </data>
</odoo>