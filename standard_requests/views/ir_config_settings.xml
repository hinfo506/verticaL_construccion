<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.standard_request</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="10"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
          <div class="app_settings_block" data-string="Standard Request"
               data-key="standard_request" groups="">

            <h2>Standard Request</h2>
            <div class="row mt16 o_settings_container" id="standard">
              <div class="col-12 col-lg-6 o_setting_box">
                <div class="o_setting_left_pane"/>
                <div class="o_setting_right_pane">
                  <label for="standard_picking_type" string="Default Picking Type"/>

                  <div class="text-muted">
                    Tipo de Conduce por Defecto
                  </div>
                  <div class="content-group">
                    <div class="row mt16 ml4">
                      <field name="standard_picking_type"/>
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
        </xpath>
      </field>
    </record>

    <record id="action_standard_request_config" model="ir.actions.act_window">
      <field name="name">Settings</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">res.config.settings</field>
      <field name="view_mode">form</field>
      <field name="target">inline</field>
      <field name="context">{'module' : 'standard_request'}</field>
    </record>

    <menuitem id="menu_standard_request_config" name="Settings"
              parent="standard_requests.menu_config"
              sequence="0" action="action_standard_request_config"
              groups="base.group_system"/>
  </data>
</odoo>
