<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_stage_inherit_view" model="ir.ui.view">
            <field name="name">Project Stages</field>
            <field name="model">project.project.stage</field>
            <field name="inherit_id" ref="project.project_project_stage_view_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='fold']" position="after">
                    <field name="is_prevision"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>