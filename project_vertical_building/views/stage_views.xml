<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="fase_view_form" model="ir.ui.view">
            <field name="name">Fase</field>
            <field name="model">vertical.stage</field>
            <field name="arch" type="xml">
                <form string="fase_form">
                    <sheet>
                        <field name="estado_fase" readonly="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_view_item" type="object" icon="fa-archive" attrs="{'invisible':[('related_is_end','!=',True)]}">
                                <field name="item_count" string="Item" widget="statinfo" />
                            </button>
                            <button class="oe_stat_button" name="action_view_childs" string="Childs" type="object" icon="fa-archive" attrs="{'invisible':[('related_is_end','=',True)]}">
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="type_stage_id"/>
                                <field name="name_complete" string="Nombre Completo"/>
                                <field name="name" string="Nombre Reducido"/>
                                <field name="parent_id"/>
                                <field name="related_is_end" invisible="1"/>
                            </group>
                            <group>
                                <field name="numero_fase"/>
                                <field name="cantidad" string="Cantidad"/>
                                <label for="fecha_inicio" string="Fecha"/>
                                <div name="dates" class="o_row">
                                    <field name="fecha_inicio" widget="daterange" options="{&quot;related_end_date&quot;: &quot;fecha_finalizacion&quot;}"/>
                                    <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
                                    <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('fecha_inicio', '=', False), ('fecha_finalizacion', '=', False)]}"/>
                                    <field name="fecha_finalizacion" widget="daterange" options="{&quot;related_start_date&quot;: &quot;fecha_inicio&quot;}"/>
                                </div>
                                <field name="total" attrs="{'readonly': [('id', '!=', False)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="descripcion" string="Descripción">
<!--                                <group>-->
                                    <field name="descripcion" string="Descripción"/>
<!--                                </group>-->
                            </page>
<!--                            <page name="items" string="Items" attrs="{'invisible': [('type_stage_id.is_end', '!=', True)]}">-->
<!--&lt;!&ndash;                                <group>&ndash;&gt;-->
<!--                                    <field name="item_ids"/>-->
<!--&lt;!&ndash;                                </group>&ndash;&gt;-->
<!--                            </page>-->
                        </notebook>
<!--                        <group>-->
<!--                            <field name="descripcion" string="Descripción"/>-->
<!--                        </group>-->
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="jobcost_total">
                            <field name="material_total" widget="monetary"/>
                            <field name="labor_total" widget="monetary"/>
                            <field name="machinerycost_total" widget="monetary"/>
                            <field name="overhead_total" widget="monetary"/>
                            <field name="jobcost_total" widget="monetary"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="fase_view_tree" model="ir.ui.view">
            <field name="name">Fase</field>
            <field name="model">vertical.stage</field>
            <field name="arch" type="xml">
                <tree string="fase_tree" default_order="fecha_finalizacion asc" js_class="vertical_stage_tree">
                    <field name="related_is_end" invisible="1"/>
                    <field name="numero_fase" string="Nº Partida"/>
                    <field name="name" string="Nombre Fase"/>
                    <field name="fecha_finalizacion" string="Finaliza"/>
                    <field name="cantidad" string="Cantidad"/>
                    <field name="total" string="Total"/>
                    <field name="type_stage_id" string="Tipo de Fase"/>
                    <button type="object" string=" Item" name="action_view_item" class="btn btn-primary" icon="fa-hand-o-right" attrs="{'invisible':[('related_is_end','!=',True)]}"/>
                </tree>
            </field>
        </record>

        <record id="vertical_stage_search_view" model="ir.ui.view">
            <field name="name">vertical.stage.search.view</field>
            <field name="model">vertical.stage</field>
            <field name="arch" type="xml">
                <search>
                    <searchpanel>
                        <field name="parent_id" string="Depends of"/>
                    </searchpanel>
                </search>
            </field>
        </record>

    </data>
</odoo>