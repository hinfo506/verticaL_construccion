<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_form_dms_directory_inherit" model="ir.ui.view">
            <field name="name">Directorio</field>
            <field name="model">dms.directory</field>
            <field name="inherit_id" ref="dms.view_dms_directory_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet//div//button" position="before">
                    <button class="oe_stat_button" name="met_actividades" type="object" icon="fa-archive">
                        <field name="activities_count" string="Actividades" widget="statinfo"/>
                    </button>
                </xpath>

            </field>
        </record>

    </data>
</odoo>