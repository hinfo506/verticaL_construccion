<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stage_fromstandard_inherit_view" model="ir.ui.view">
            <field name="name">Fase</field>
            <field name="model">vertical.stage</field>
            <field name="inherit_id" ref="project_vertical_building.fase_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
<!--                    <header>-->
                        <button name='add_standars_one_id' string='Agregar Standard' class='oe_highlight'
                                type='object' attrs="{'invisible': [('related_is_end', '!=', True)]}"/>
<!--                    </header>-->

                </xpath>

                <xpath expr="//sheet//div//button" position="before">
                    <button class="oe_stat_button" name="action_view_item_standard" type="object" icon="fa-archive" attrs="{'invisible': [('related_is_end', '!=', True)]}">
                        <field name="itemstand_count" string="Items Stand" widget="statinfo"/>
                    </button>
                </xpath>

            </field>
        </record>

        <record id="stage_fromstand_inherit_view" model="ir.ui.view">
            <field name="name">Fase</field>
            <field name="model">vertical.stage</field>
            <field name="inherit_id" ref="project_vertical_building.fase_view_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='type_stage_id']" position="after">
                    <button type="object" string=" STA" name="action_view_item_standard" class="btn btn-primary" icon="fa-hand-o-right" attrs="{'invisible':[('related_is_end','!=',True)]}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>