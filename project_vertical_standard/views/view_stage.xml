<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stage_fromstandard_inherit_view" model="ir.ui.view">
            <field name="name">Fase</field>
            <field name="model">vertical.stage</field>
            <field name="inherit_id" ref="project_vertical_building.fase_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="before">
                    <header>
                        <button name='add_standars_one_id' string='Agregar Standard' class='oe_highlight'
                                type='object' attrs="{'invisible': [('related_is_end', '!=', True)]}"/>
                    </header>

                </xpath>

                <xpath expr="//sheet//div//button" position="before">
                    <button class="oe_stat_button" name="action_view_item_standard" type="object" icon="fa-archive" attrs="{'invisible': [('related_is_end', '!=', True)]}">
                        <field name="itemstand_count" string="Items Standard" widget="statinfo"/>
                    </button>
                </xpath>

            </field>
        </record>

    </data>
</odoo>