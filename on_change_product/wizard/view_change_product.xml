<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="change_product_view_form" model="ir.ui.view">
            <field name="name">Cambiar Producto</field>
            <field name="model">change.product</field>
            <field name="arch" type="xml">
                <form string="change_product_form">
                    <sheet>
                        <field name="info" readonly="1"/>
                        <group>
                            <group><field name="product_id"/></group>
                            <group><field name="product_change_id"/></group>
                        </group>
                        <group>
                            <group><field name="change_price"/></group>
                            <group><field name="nuevo_precio" attrs="{'invisible': [('change_price', '=', False)],'required': [('change_price', '=', True)]}"/></group>
                        </group>
                        <notebook>
                            <page name="list" string="Listado de ArtÃ­culos">
                                <field name="item_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button string="Guardar" name="action_guardar" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>