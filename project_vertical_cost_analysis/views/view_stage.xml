<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="fase_view_inherit" model="ir.ui.view">
            <field name="name">Fase</field>
            <field name="model">vertical.stage</field>
            <field name="inherit_id" ref="project_vertical_building.fase_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='parent_id']" position="before">
                    <field name="cost_analysis_id" attrs="{'invisible':[('related_is_end','!=',True)]}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>